@page
@model ProjektNYYYZealand.Pages.UnderviserPage.GetUnderviserModel
@{
       
    ViewData["Titel"] = "GetUndervisers";

}



<form>

    <p>

        UnderviserId: <input type="text" asp-for="UnderviserId" />

        MedarbejderNumber: <input type="text" asp-for="MedarbejderNumber" />

        Name <input type="text" asp-for="Name" />

        Email <input type="text" asp-for="Email" />

        <input type="submit" value="Søg her" />





    </p>

</form>

<p>

    <a asp-page="/UnderviserPage/CreateUnderviser">Tilføj en ny underviser</a>

</p>



<h1> Liste over undervisere</h1>



<table class=" tabel">

    <thead>

        <tr>

            <th>UnderviserId</th>

            <th>MedarbejderNumber</th>

            <th>Name</th>

            <th>Email</th>

            <th>Billede</th>

        </tr>

    </thead>

    <tbody>

        @if (Model.Undervisers != null)

        {

            @foreach (var item in Model.Undervisers)

            {

                <tr>

                    <td>@item.UnderviserId</td>

                    <td>@item.MedarbejderNumber</td>


                    <td>@item.Name</td>

                    <td>@item.Email</td>

@*                    <td>

                        <img src="~/Image/@item.Billede" width="80" height="70">

                    </td>*@

                    <td>

                        <p>

                            <a asp-page="/UnderviserPage/DeleteUnderviser" asp-route-id="@item.UnderviserId">Slet underviser</a>

                        </p>

                    </td>

                    <td>

                        <p>

                            <a asp-page="/UnderviserPage/UpdateUnderviser" asp-route-id="@item.UnderviserId">Opdater underviser</a>

                        </p>

                    </td>



                </tr>

            }

        }

    </tbody>



</table>
}

}
